<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Image</th>
      <th>Like</th>
      <th>Dislike</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.image %></td>
        <td><%= product.like %></td>
        <td><%= product.dislike %></td>
        <td><%= link_to 'like', edit_product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
